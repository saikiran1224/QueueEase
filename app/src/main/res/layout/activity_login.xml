<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/txtOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/quicksand_light"
        android:text="Login here!"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@id/txtOTP"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_bg"
        android:backgroundTint="@color/grey"
        android:defaultFocusHighlightEnabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="18dp"
        android:src="@drawable/ic_baseline_person_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <View
        android:id="@+id/viewDivider"
        android:layout_width="260dp"
        android:layout_height="4dp"
        android:layout_below="@id/txtOTP"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:background="@color/grey" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Email ID"
        app:endIconMode="clear_text"
        android:layout_below="@id/viewDivider"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/layoutEdit1"
        app:startIconDrawable="@drawable/ic_baseline_email_24">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editEmailID"
            android:inputType="textEmailAddress"
            android:drawablePadding="5dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        app:endIconMode="password_toggle"
        android:layout_below="@id/layoutEdit1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/layoutEdit2"
        app:startIconDrawable="@drawable/ic_baseline_lock_24">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editPassword"
            android:inputType="textPassword"
            android:drawablePadding="5dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:text="login"
        android:layout_below="@id/layoutEdit2"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDonthave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginBottom="35dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/quicksand_light"
        android:layout_centerHorizontal="true"
        android:text="Don't have an Account? Signup"
        android:textSize="17sp"
        android:textStyle="bold" />



</RelativeLayout>